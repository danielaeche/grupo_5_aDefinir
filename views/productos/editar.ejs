						  <label for="categoria">Categoria</label>
						  <input type="text" class="form-control" id="categoria" name="categoria" value="<%=productos.categoria%>">
						</div>
						<div class="form-group">
						  <label for="nombre">Nombre</label>
						  <input type="text" class="form-control" id="nombre" name="nombre" value="<%=productos.nombre%>">
						</div>
						<div class="form-group">
							<label for="descripcion">Descripci√≥n</label>
							<input type="text" class="form-control" id="descripcion" name="descripcion" value="<%=productos.descripcion%>">
						</div>
						<div class="form-group">
							<label for="precioUnitario">Precio</label>
							<input type="number" class="form-control" id="precioUnitario" name="precioUnitario" value="<%=productos.precioUnitario%>">
						</div>
					
						<button type="submit" class="btn btn-primary">Guardar</button>
						
					  </form>

				</div>
	    	</div>
		</div>          
        </main>
        <hr>
        <%- include('../partials/footer.ejs') %>
