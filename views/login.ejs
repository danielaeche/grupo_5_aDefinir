<!DOCTYPE html>
<html lang="en">
    
    <%- include('partials/head.ejs') %>

<body>
    <%- include('partials/header.ejs') %>
    <form action="/users/login" method="post" class="form-login">
        <div class="form-group">
            <% if (typeof errors !== 'undefined') { errors.map(function(error) { %>
                
                <p><%error.msg %></p>
                <% })
                
            }%>
            <label for="">Ingrese su email</label>
            <input type="email" name="email" class="form-control" 
                   value="<%= typeof data != 'undefined' ? data.email: '' %>"><br>
        </div>
        <div class="form-group">
            <label for="">Ingrese su clave</label>
            <input type="password" name="password" class="form-control" 
            value="<%= typeof data != 'undefined' ? data.password: '' %>"><br>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-success" value="login" ><a href="/" style="text-decoration:none; color: black;">Loguearse</a></button>
        </div>
    </form>
    <%- include('partials/scripts.ejs') %>
</body>
</html>